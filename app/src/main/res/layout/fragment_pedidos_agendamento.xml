<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Fragments.PedidosAgendamentoFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_toolbar_background">

        <ImageView
            android:id="@+id/ic_historico"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_history"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_ped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="20dp"
            android:backgroundTint="#7250AE"
            android:elevation="15dp"
            android:src="@drawable/ic_save"
            android:text="salvar agendamentos no histÃ³rico"
            android:textColor="#CCCCCC" />

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_datas_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_periodo_atendimento"
        tools:listitem="@layout/item_peodido_agendamento" />
</FrameLayout>